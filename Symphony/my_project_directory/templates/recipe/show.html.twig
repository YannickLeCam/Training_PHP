{% extends 'base.html.twig' %}

{% block title %}Toute les recette !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="card text-start">
    <div class="card-body">
        <h4 class="card-title">{{ recipe.title }}</h4>
        <h6>La recette a été crée le {{recipe.createdAt.format('d-m-Y')}}</h6>
        <h6>Le temps de préparation est de <strong>{{recipe.duration}} minutes </strong></h6>
        <p class="card-text">{{recipe.content |replace({'\n\r': '<br><br>'})|raw}}</p>
    </div>
</div>
    <a
        name=""
        id=""
        class="btn btn-primary"
        href="{{url('recipe.edit', {id: recipe.id} )}}"
        role="button"
        >Mofier la recette</a
    >
    


{% endblock %}
