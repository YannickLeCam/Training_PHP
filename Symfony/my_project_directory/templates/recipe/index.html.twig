{% extends 'base.html.twig' %}

{% block title %}Toute les recette !{% endblock %}

{% block body %}

<div class="example-wrapper">
    <a
        class="btn btn-primary"
        href="{{url('recipe.new')}}"
        role="button"
        >Ajouter une nouvelle recette</a
    >
    
    <ul class="list-group list-group-flush">
    {%for recipe in recipes %}
        <li class="list-group-item"><a href="{{path('recipe.show',{id:recipe.id,slug:recipe.slug})}}">{{recipe.title}}</a></li>
    {% endfor %}
    </ul>
</div>
{% endblock %}
